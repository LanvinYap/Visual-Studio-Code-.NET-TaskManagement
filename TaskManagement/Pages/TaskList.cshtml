@page
@model TaskManagement.Pages.TaskListModel
@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<a asp-page="/AddTask" class="btn btn-success mb-3">➕ Add Task</a>


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@(task.IsCompleted ? "✅" : "❌")</td>
                <td>
                    <a asp-page="/EditTask" asp-route-id="@task.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-page="/DeleteTask" asp-route-id="@task.Id" class="btn btn-danger">🗑 Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
