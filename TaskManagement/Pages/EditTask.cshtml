@page "{id:int}"
@model TaskManagement.Pages.EditTaskModel
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">✏️ Edit Task</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Task.Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <input type="text" class="form-control" asp-for="Task.Title" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Description</label>
                    <textarea class="form-control" asp-for="Task.Description"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Due Date</label>
                    <input type="date" class="form-control" asp-for="Task.DueDate" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Task Status</label>
                    <select class="form-select" asp-for="Task.Status"
                        asp-items="Html.GetEnumSelectList<TaskManagement.Models.TaskStatus>()">
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">💾 Save Changes</button>
                    <a asp-page="/TaskList" class="btn btn-secondary">❌ Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
