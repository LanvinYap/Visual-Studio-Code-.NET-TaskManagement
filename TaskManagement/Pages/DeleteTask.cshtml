@page
@model DeleteTaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>
<p>Are you sure you want to delete this task?</p>

<div>
    <strong>Task Name:</strong> @Model.Task.Title
</div>
<div>
    <strong>Description:</strong> @Model.Task.Description
</div>
<div>
    <strong>Due Date:</strong> @Model.Task.DueDate.ToString("yyyy-MM-dd")
</div>

<form method="post">
    <input type="hidden" asp-for="Task.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/TaskList" class="btn btn-secondary">Cancel</a>
</form>
